---
/**
 * Articles Listing Page
 * Server-rendered, filters via URL params
 * Supports ?type= filter and ?judge= filter
 */

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTAFooter from '../../components/CTAFooter.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { createSecureSupabaseClient } from '../../utils/supabase';
import { ARTICLE_TYPES } from '../../utils/article-types';
import type { ArticleType } from '../../utils/article-types';

const activeType = Astro.url.searchParams.get('type') as ArticleType | null;
const judgeFilter = Astro.url.searchParams.get('judge');

const supabase = createSecureSupabaseClient(Astro.cookies);

let articles: any[] = [];
let judgeName: string | null = null;

if (judgeFilter) {
  // Fetch judge name for display
  const { data: judge } = await supabase
    .from('judges')
    .select('first_name, last_name')
    .eq('id', judgeFilter)
    .single();

  if (judge) {
    judgeName = `${judge.first_name} ${judge.last_name}`;
  }

  // Fetch articles linked to this judge
  const { data: judgeArticles } = await supabase
    .from('article_judges')
    .select(`
      articles!inner (*)
    `)
    .eq('judge_id', judgeFilter)
    .eq('articles.is_published', true);

  articles = judgeArticles?.map((row: any) => row.articles) || [];
  // Sort by published_at descending
  articles.sort((a, b) => new Date(b.published_at).getTime() - new Date(a.published_at).getTime());
} else {
  // Standard query
  let query = supabase
    .from('articles')
    .select('*')
    .eq('is_published', true)
    .order('published_at', { ascending: false });

  if (activeType && activeType in ARTICLE_TYPES) {
    query = query.eq('article_type', activeType);
  }

  const { data } = await query;
  articles = data || [];
}
---

<Layout
  title="Case Studies & Insights | XR Awards"
  description="Expert insights, case studies, and press releases from the XR Awards community."
>
  <Header />

  <main class="min-h-screen bg-white">
    <!-- Hero -->
    <section class="relative bg-[#0E1022] pt-32 md:pt-40 pb-16 md:pb-24 overflow-hidden">
      <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 font-serif">
          Case Studies & Insights
        </h1>
        <div class="flex justify-center gap-2 mb-6">
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
        </div>
        <p class="text-lg text-gray-300 max-w-2xl mx-auto">
          Expert insights, case studies, and the latest updates from the XR Awards community.
        </p>
      </div>
    </section>

    <!-- Filter Tabs + Content -->
    <section class="py-12 md:py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Judge filter banner */}
        {judgeFilter && judgeName && (
          <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg flex items-center justify-between">
            <p class="text-sm text-blue-800">
              Showing articles by <strong>{judgeName}</strong>
            </p>
            <a href="/articles/" class="text-sm text-blue-600 hover:text-blue-800 font-medium">
              Clear filter
            </a>
          </div>
        )}

        {/* Filter Tabs - disabled when judge filter active */}
        {!judgeFilter && (
          <div class="flex flex-wrap gap-3 mb-10">
            <a
              href="/articles/"
              class:list={[
                'px-5 py-2.5 rounded-full text-sm font-medium transition-colors',
                !activeType
                  ? 'bg-[#0E1022] text-white'
                  : 'bg-gray-100 text-gray-700 hover:bg-gray-200',
              ]}
            >
              All
            </a>
            {Object.entries(ARTICLE_TYPES).map(([key, { label }]) => (
              <a
                href={`/articles/?type=${key}`}
                class:list={[
                  'px-5 py-2.5 rounded-full text-sm font-medium transition-colors',
                  activeType === key
                    ? 'bg-[#0E1022] text-white'
                    : 'bg-gray-100 text-gray-700 hover:bg-gray-200',
                ]}
              >
                {label}
              </a>
            ))}
          </div>
        )}

        <!-- Articles Grid -->
        {articles && articles.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {articles.map((article: any) => (
              <ArticleCard article={article} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <p class="text-gray-500 text-lg">No articles found.</p>
            {(activeType || judgeFilter) && (
              <a href="/articles/" class="mt-4 inline-block text-cyan-600 hover:underline">
                View all articles
              </a>
            )}
          </div>
        )}
      </div>
    </section>
  </main>

  <CTAFooter />
  <Footer />
</Layout>

<style>
  @import "tailwindcss";
</style>
