                    </div>
                  </h4>
                  <ul class="space-y-3">
                    {category.accoladesByType.map((group: any) => (
                      group.finalists.map((item: any) => (
                        <li class="flex items-start">
                          <span class="text-gray-400 mr-2">•</span>
                          <span class="text-gray-900">
                            <span class="font-medium">{item.finalist.organization}</span>
                            <span class="text-gray-600"> – </span>
                            <span class="font-medium">{item.finalist.title}</span>
                            <span class="text-gray-400"> | </span>
                            <span class="text-[#4923EB]">{item.accolade.code} {item.accolade.name}</span>
                          </span>
                        </li>
                      ))
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </div>

          <!-- All Finalists Grid -->
          {category.finalists.length > 0 && (
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-6">Finalists</h3>
              <div class="grid grid-cols-3 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-6">
                {category.finalists.map((finalist: any) => (
                  <div class="finalist-card">
                    {finalist.image_url ? (
                      <div class="aspect-square bg-gray-100 rounded-2xl overflow-hidden mb-4 group">
                        <Image
                          src={finalist.image_url}
                          alt={finalist.title}
                          width={400}
                          height={400}
                          format="webp"
                          class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-105"
                        />
                      </div>
                    ) : (
                      <div class="w-full mb-4">
                        <div class="h-1 rounded-full" style="background: linear-gradient(90deg, #000000 0%, #0077BE 50%, #000000 100%);"></div>
                      </div>
                    )}
                    <div>
                      <h3 class="text-base font-bold text-gray-900 mb-2 leading-tight">{finalist.title}</h3>
                      {finalist.organization && (
                        <p class="text-sm text-[#4923EB] mb-2 leading-tight font-medium">{finalist.organization}</p>
                      )}
                      {finalist.description && (
                        <p class="text-sm text-gray-700 leading-relaxed">{finalist.description}</p>
                      )}
                      {finalistArticleMap.has(finalist.id) && (
                        <a
                          href={`/articles/${finalistArticleMap.get(finalist.id)!.slug}/`}
                          class="read-article-btn" target="_blank" rel="noopener noreferrer"
                        >
                          Read case study <span class="arrow">&rarr;</span>
                        </a>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </section>
    ))}

    <!-- CTA Section -->
    <CTAFooter />
  </main>

  <Footer />
</Layout>

