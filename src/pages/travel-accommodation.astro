---
/**
 * Travel & Accommodation Page
 * URL: /travel-accommodation
 * Provides event details, travel information, hotels, and transportation for Brussels
 */
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTAFooter from '../components/CTAFooter.astro';
import { Image } from 'astro:assets';
import { getR2ImageUrl } from '../utils/r2';
import { supabase } from '../utils/supabase';
import { getCTAButton, getEventPhase } from '../utils/date-checker';

// Fetch active event details
const { data: eventDetails } = await supabase
  .from('event_details')
  .select('*')
  .eq('is_active', true)
  .single();

// Get current event phase and CTA button
const eventPhase = await getEventPhase();
const ctaButton = await getCTAButton('travel');

// Check what data is actually available
const hasDates = !!(eventDetails?.nominations_open || eventDetails?.nominations_close || eventDetails?.finalists_announced || eventDetails?.awards_ceremony);
const hasVenue = !!eventDetails?.venue_address;
const hasTickets = !!eventDetails?.tickets_portal_url;

// Fallback URL if tickets_portal_url is not set
const ticketsUrl = hasTickets ? eventDetails.tickets_portal_url : '/register-interest/';
const ticketsTarget = hasTickets ? '_blank' : '_self';

// Create Google Maps embed URL from venue address (only if venue exists)
const venueAddress = eventDetails?.venue_address || '';
const encodedAddress = encodeURIComponent(venueAddress);
const mapEmbedUrl = hasVenue ? `https://maps.google.com/maps?q=${encodedAddress}&t=&z=15&ie=UTF8&iwloc=&output=embed` : '';

// Get images for sections
const ticketsImage = getR2ImageUrl('/images/2025/10/xr-awards-dinner-cheers-rotterdam-2023_1760216494171.png');
const travelImage = getR2ImageUrl('/images/2025/10/brussles-xra_1760216262140.jpg');
const hotelsImage = getR2ImageUrl('/images/2025/10/hotel-xra_1760216332619.jpg');
const scheduleImage = getR2ImageUrl('/images/2025/10/xr-awards-dinner-rotterdam-2023_1760216550174.png');
const groupImage = getR2ImageUrl('/images/2025/10/vr-awards-htc-team-2019_1760216397468.png');
const brusselsImage = getR2ImageUrl('/images/2025/10/gala-stereopsia-brussles_1760216291947.png');

// Hotel section images
const hotelImage1 = getR2ImageUrl('/images/2025/10/hotel-xra_1760216332619.jpg');
const hotelImage2 = getR2ImageUrl('/images/2025/10/brussles-xra_1760216262140.jpg');
---

<Layout
  title="Event Details, Travel & Accommodation - AIXR XR Awards"
  description="Plan your visit to the XR Awards Gala in Brussels. Find information about the venue, travel, hotels, and local transport options."
>
  <Header />

  <main class="min-h-screen bg-white">
    <!-- Page Header -->
    <section class="relative bg-[#0E1022] pt-32 md:pt-40 pb-20 md:pb-32 overflow-hidden">
      <!-- Decorative Background Rings -->
      <div class="absolute -left-20 md:left-0 top-1/4 -translate-y-1/2 -translate-x-1/2 w-[300px] h-[300px] md:w-[450px] md:h-[450px]">
        <div class="absolute inset-0 rounded-full" style="background: linear-gradient(180deg, #E91E8C 0%, #5D1635 100%);"></div>
        <div class="absolute top-[55px] left-[55px] right-[55px] bottom-[55px] md:top-[75px] md:left-[75px] md:right-[75px] md:bottom-[75px] rounded-full bg-[#0E1022]"></div>
      </div>
      <div class="absolute -right-20 md:right-0 top-3/4 -translate-y-1/2 translate-x-1/2 w-[300px] h-[300px] md:w-[450px] md:h-[450px]">
        <div class="absolute inset-0 rounded-full" style="background: linear-gradient(180deg, #00D4D8 0%, #0A4B52 100%);"></div>
        <div class="absolute top-[55px] left-[55px] right-[55px] bottom-[55px] md:top-[75px] md:left-[75px] md:right-[75px] md:bottom-[75px] rounded-full bg-[#0E1022]"></div>
      </div>

      <!-- Content -->
      <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="page-title text-white mb-6">
          Event Details, Travel & Accommodation
        </h1>

        <!-- Decorative Dots -->
        <div class="flex justify-center gap-2 mb-6">
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400"></span>
        </div>

        <p class="page-subtitle text-white">
          {eventPhase.phase === 'post-ceremony'
            ? `The ${eventDetails?.event_year || ''} XR Awards Gala has concluded. View the winners and prepare for next year.`
            : eventDetails?.awards_ceremony
              ? `${new Date(eventDetails.awards_ceremony).toLocaleDateString('en-GB', { day: '2-digit', month: 'long', year: 'numeric' })}, ${eventDetails?.venue_address || eventDetails?.location || 'Location TBA'}`
              : eventDetails?.location
                ? `${eventDetails.location} — dates coming soon`
                : 'Details coming soon — register your interest to be notified'
          }
        </p>
      </div>
    </section>

    <!-- Plan Your Visit Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-left mb-12">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">Plan Your Visit</h2>
          <p class="text-lg text-gray-600">Key details and support from the XR awards</p>
        </div>

        <!-- Feature Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Tickets Card -->
          <a href={ticketsUrl} target={ticketsTarget} rel={hasTickets ? "noopener noreferrer" : undefined} class="group relative">
            <div class="aspect-video overflow-hidden rounded-lg">
              <Image 
                src={ticketsImage} 
                alt="Tickets"
                class="w-full h-full object-cover"
                width={600}
                height={340}
              />
            </div>
            <div class="feature-banner absolute bottom-4 left-4 right-4 rounded-md p-4">
              <div class="flex items-start justify-between">
                <p class="text-white text-lg font-medium pr-3 font-['Jura']">Tickets</p>
                <svg class="w-6 h-6 text-white flex-shrink-0 feature-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 19L19 5M19 5H7M19 5V17" />
                </svg>
              </div>
            </div>
          </a>

          <!-- Travel & Visas Card -->
          <a href="#travel" class="group relative">
            <div class="aspect-video overflow-hidden rounded-lg">
              <Image 
                src={travelImage} 
                alt="Travel & Visa's"
                class="w-full h-full object-cover object-top"
                width={600}
                height={340}
              />
            </div>
            <div class="feature-banner absolute bottom-4 left-4 right-4 rounded-md p-4">
              <div class="flex items-start justify-between">
                <p class="text-white text-lg font-medium pr-3 font-['Jura']">Travel & Visa's</p>
                <svg class="w-6 h-6 text-white flex-shrink-0 feature-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 19L19 5M19 5H7M19 5V17" />
                </svg>
              </div>
            </div>
          </a>

          <!-- Hotels Card -->
          <a href="#hotels" class="group relative">
            <div class="aspect-video overflow-hidden rounded-lg">
              <Image 
                src={hotelsImage} 
                alt="Hotels"
                class="w-full h-full object-cover"
                width={600}
                height={340}
              />
            </div>
            <div class="feature-banner absolute bottom-4 left-4 right-4 rounded-md p-4">
              <div class="flex items-start justify-between">
                <p class="text-white text-lg font-medium pr-3 font-['Jura']">Hotels</p>
                <svg class="w-6 h-6 text-white flex-shrink-0 feature-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 19L19 5M19 5H7M19 5V17" />
                </svg>
              </div>
            </div>
          </a>

          <!-- Event Schedule Card -->
          <a href="#schedule" class="group relative">
            <div class="aspect-video overflow-hidden rounded-lg">
              <Image 
                src={scheduleImage} 
                alt="Event Schedule"
                class="w-full h-full object-cover"
                width={600}
                height={340}
              />
            </div>
            <div class="feature-banner absolute bottom-4 left-4 right-4 rounded-md p-4">
              <div class="flex items-start justify-between">
                <p class="text-white text-lg font-medium pr-3 font-['Jura']">Event Schedule</p>
                <svg class="w-6 h-6 text-white flex-shrink-0 feature-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 19L19 5M19 5H7M19 5V17" />
                </svg>
              </div>
            </div>
          </a>

          <!-- Group Packages Card -->
          <a href={ticketsUrl} target={ticketsTarget} rel={hasTickets ? "noopener noreferrer" : undefined} class="group relative">
            <div class="aspect-video overflow-hidden rounded-lg">
              <Image 
                src={groupImage} 
                alt="Group Packages"
                class="w-full h-full object-cover"
                width={600}
                height={340}
              />
            </div>
            <div class="feature-banner absolute bottom-4 left-4 right-4 rounded-md p-4">
              <div class="flex items-start justify-between">
                <p class="text-white text-lg font-medium pr-3 font-['Jura']">Group Packages</p>
                <svg class="w-6 h-6 text-white flex-shrink-0 feature-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 19L19 5M19 5H7M19 5V17" />
                </svg>
              </div>
            </div>
          </a>

          <!-- Discover Brussels Card -->
          <a href="https://visit.brussels/en" target="_blank" rel="noopener noreferrer" class="group relative">
            <div class="aspect-video overflow-hidden rounded-lg">
              <Image 
                src={brusselsImage} 
                alt="Discover Brussels"
                class="w-full h-full object-cover"
                width={600}
                height={340}
              />
            </div>
            <div class="feature-banner absolute bottom-4 left-4 right-4 rounded-md p-4">
              <div class="flex items-start justify-between">
                <p class="text-white text-lg font-medium pr-3 font-['Jura']">Discover Brussels</p>
                <svg class="w-6 h-6 text-white flex-shrink-0 feature-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 19L19 5M19 5H7M19 5V17" />
                </svg>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Event Schedule Section -->
    <section id="schedule" class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Left Column - Schedule Details -->
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Event Schedule</h2>

            <div class="space-y-6 mb-8">
              {eventDetails?.awards_ceremony ? (
                <p class="text-lg text-gray-700">
                  Join the XR Gala Ceremony, live in {eventDetails?.location || 'Brussels, Belgium'} on the <strong>{new Date(eventDetails.awards_ceremony).toLocaleDateString('en-GB', { weekday: 'short', day: '2-digit', month: 'short', year: 'numeric' })}</strong>. <strong>The event starts at 7pm.</strong>
                </p>
              ) : (
                <p class="text-lg text-gray-700">
                  Join the XR Gala Ceremony{eventDetails?.location ? `, live in ${eventDetails.location}` : ''}. Date and time to be announced — register your interest to be notified.
                </p>
              )}

              <p class="text-base text-gray-700">
                Please note there is a strict <a href="https://help.aixr.org/en/articles/7001836-is-there-a-dress-code" class="text-[#4923EB] hover:underline" target="_blank" rel="noopener noreferrer">black tie dress code.</a>
              </p>

              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">Ticket Packages</h3>
                <p class="text-gray-700 mb-6">
                  AIXR XR Awards and Stereopsia Award tickets must be purchased individually or as part of a package through United XR
                </p>
                <a
                  href={ticketsUrl}
                  target={ticketsTarget}
                  rel={hasTickets ? "noopener noreferrer" : undefined}
                  class="inline-flex items-center px-8 py-3 bg-[#4923EB] text-white font-medium rounded-lg hover:bg-[#3a1bb8] transition-colors"
                >
                  {hasTickets ? 'Book Tickets' : 'Register Interest'}
                </a>
              </div>
            </div>

            {hasVenue ? (
              <p class="text-sm text-gray-600">
                <strong>Address:</strong> {eventDetails?.venue_address}
              </p>
            ) : eventDetails?.location ? (
              <p class="text-sm text-gray-600">
                <strong>Location:</strong> {eventDetails.location} — exact venue to be confirmed
              </p>
            ) : null}
          </div>

          <!-- Right Column - Map -->
          <div class="rounded-2xl overflow-hidden shadow-lg h-[500px]">
            {hasVenue ? (
              <iframe
                src={mapEmbedUrl}
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title={`${eventDetails?.location?.split(',')[0] || 'Venue'} Location`}
              ></iframe>
            ) : (
              <div class="w-full h-full bg-gray-100 flex flex-col items-center justify-center text-gray-400">
                <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <p class="text-lg font-medium text-gray-500">Venue location coming soon</p>
                <p class="text-sm text-gray-400 mt-1">{eventDetails?.location || 'To be announced'}</p>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Hotels Section -->
    <section id="hotels" class="py-16 md:py-24 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-12">Staying in {eventDetails?.location?.split(',')[0] || 'Brussels'}</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Closest Hotel -->
          <div class="rounded-2xl overflow-hidden flex flex-col">
            <div class="aspect-video overflow-hidden">
              <Image
                src={hotelImage1}
                alt="Hotel near venue"
                class="w-full h-full object-cover"
                width={600}
                height={340}
              />
            </div>
            <div class="p-8 bg-[#0E1022] flex flex-col flex-1">
              <h3 class="text-2xl font-bold text-white mb-4">Closest Hotel</h3>
              <p class="text-gray-300 mb-6 flex-1">
                {hasVenue
                  ? "For your convenience, we've listed the closest hotel to the venue. Other options are available. To book your stay, simply click the button below."
                  : "Hotel recommendations will be available once the venue is confirmed. Register your interest to be notified."
                }
              </p>
              {hasVenue ? (
                <a
                  href="https://www.yadoyahotel.be/?"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-6 py-3 bg-[#4923EB] text-white font-medium rounded-lg hover:bg-[#3a1bb8] transition-colors"
                >
                  Book Directly
                </a>
              ) : (
                <span class="inline-flex items-center px-6 py-3 bg-gray-600 text-gray-300 font-medium rounded-lg cursor-not-allowed">
                  Coming Soon
                </span>
              )}
            </div>
          </div>

          <!-- Hotel Partners -->
          <div class="rounded-2xl overflow-hidden flex flex-col">
            <div class="aspect-video overflow-hidden">
              <Image
                src={hotelImage2}
                alt="Brussels city view"
                class="w-full h-full object-cover"
                width={600}
                height={340}
              />
            </div>
            <div class="p-8 bg-[#0E1022] flex flex-col flex-1">
              <h3 class="text-2xl font-bold text-white mb-4">Hotel Partners</h3>
              <p class="text-gray-300 mb-6 flex-1">
                {hasVenue
                  ? "When it comes to accommodations that keep you right in the heart of all the action, Visit Brussels is the official hotel agent for the AIXR XR Awards, and United XR."
                  : "Partner hotel deals will be available once the venue is confirmed. Register your interest to be notified."
                }
              </p>
              {hasVenue ? (
                <a
                  href="https://secure.hotel.visitbrussels.be/event/stereopsia-europe-2025/congress/search"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center px-6 py-3 bg-[#4923EB] text-white font-medium rounded-lg hover:bg-[#3a1bb8] transition-colors"
                >
                  Check Preferential Rates
                </a>
              ) : (
                <span class="inline-flex items-center px-6 py-3 bg-gray-600 text-gray-300 font-medium rounded-lg cursor-not-allowed">
                  Coming Soon
                </span>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Getting to Venue Section -->
    <section id="travel" class="py-16 md:py-24 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-12">Getting to {eventDetails?.location?.split(',')[0] || 'the venue'}</h2>

        {hasVenue ? (
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <!-- Brussels Airport -->
            <div class="flex gap-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 rounded-full bg-[#4923EB] flex items-center justify-center">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Brussels Airport (BRU)</h3>
                <p class="text-gray-700 mb-4">
                  The most convenient airport to fly into is Brussels Airport. Austrian Airlines and Lufthansa offer frequent flights, but we recommend checking <a href="https://www.skyscanner.net/" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Skyscanner</a> and <a href="https://www.kiwi.com/en/" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Kiwi</a> in order to find flight deals.
                </p>
                <p class="text-sm font-semibold text-gray-900 mb-2">Recommended Airports</p>
                <ul class="space-y-2 text-gray-700">
                  <li>Brussels Airport (BRU) 16km</li>
                  <li>Brussels South Charleroi Airport (CRL) 55km</li>
                  <li>Antwerp International Airport (ANR) 56km</li>
                </ul>
              </div>
            </div>

            <!-- Direct Rail Connections -->
            <div class="flex gap-6">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 rounded-full bg-[#00D4D8] flex items-center justify-center">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Direct Rail Connections</h3>
                <p class="text-gray-700 mb-4">
                  Brussels is well connected by high-speed trains from major cities like London, Paris, Amsterdam, and Cologne. Tickets can be booked via <a href="https://www.eurostar.com/rw-en" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Eurostar</a>, <a href="https://www.thetrainline.com/" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Trainline</a>, or <a href="https://www.bahn.de/" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Deutsche Bahn</a>.
                </p>
                <p class="text-sm font-semibold text-gray-900 mb-2">London to Brussels in 2 hours:</p>
                <ul class="space-y-2 text-gray-700">
                  <li>Direct Highspeed from Central London to Central Brussels.</li>
                  <li>Direct train services from Europe to Bruxelles-Midi</li>
                </ul>
              </div>
            </div>
          </div>
        ) : (
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <!-- Flights placeholder -->
            <div class="flex gap-6 opacity-50">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 rounded-full bg-gray-400 flex items-center justify-center">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Flights</h3>
                <p class="text-gray-500">
                  Airport and flight recommendations will be available once the venue is confirmed. In the meantime, we recommend checking <a href="https://www.skyscanner.net/" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Skyscanner</a> and <a href="https://www.kiwi.com/en/" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Kiwi</a> for flight deals.
                </p>
              </div>
            </div>

            <!-- Rail placeholder -->
            <div class="flex gap-6 opacity-50">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 rounded-full bg-gray-400 flex items-center justify-center">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Rail Connections</h3>
                <p class="text-gray-500">
                  Rail travel details and recommended routes will be shared once the venue location is announced. Tickets can typically be booked via <a href="https://www.thetrainline.com/" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Trainline</a>.
                </p>
              </div>
            </div>
          </div>
        )}

        <p class="mt-8 text-gray-700 italic">
          Need to request a VISA? <a href="https://help.aixr.org/en/articles/8348738-getting-a-visa-invitation-letter-for-aixr-events" target="_blank" rel="noopener noreferrer" class="text-[#4923EB] hover:underline">Visit our help center.</a>
        </p>
      </div>
    </section>

    <!-- Getting Around Section -->
    <section class="py-16 md:py-24 bg-white">
