---
import '../styles/globals.css';
import { ViewTransitions } from 'astro:transitions';
import { getAbsoluteUrl, getCanonicalUrl, getOGImageUrl, cleanTitle, cleanDescription } from '../utils/seo';
import { supabase } from '../utils/supabase';
import { EventBanner } from '../components/EventBanner';
import CookieConsent from '../components/cookie-consent/CookieConsent.astro';

// Fetch active event details for banner
const { data: eventDetails } = await supabase
	.from('event_details')
	.select('awards_ceremony, tickets_portal_url')
	.eq('is_active', true)
	.single();

const eventDate = eventDetails?.awards_ceremony || null;
const ticketsUrl = eventDetails?.tickets_portal_url || 'https://events.unitedxr.eu/2025?utm_source=AIXR&utm_medium=XR+Awards+Website&utm_campaign=link';

export interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
	type?: 'website' | 'article' | 'product';
	noindex?: boolean;
	nofollow?: boolean;
	publishedTime?: string;
	modifiedTime?: string;
	author?: string;
	section?: string;
	tags?: string[];
}

const {
	title = "XR Awards | Celebrating Excellence in Extended Reality",
	description = "The premier awards ceremony recognizing outstanding achievements in Extended Reality (XR) technology, including VR, AR, and MR innovations across industries.",
	image = "/XRA-share-image.png",
	canonical = Astro.url.href,
	type = 'website',
	noindex = false,
	nofollow = false,
	publishedTime,
	modifiedTime,
	author,
	section,
	tags
} = Astro.props;

const siteName = "XR Awards";
const siteTitle = cleanTitle(title, siteName);
const cleanDesc = cleanDescription(description);
const canonicalUrl = getCanonicalUrl(canonical);
const ogImageUrl = getOGImageUrl(image);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- SEO Meta Tags -->
		<title>{siteTitle}</title>
		<meta name="description" content={cleanDesc} />
		<link rel="canonical" href={canonicalUrl} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="robots" content={`${noindex ? 'noindex' : 'index'},${nofollow ? 'nofollow' : 'follow'}`} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:title" content={siteTitle} />
		<meta property="og:description" content={cleanDesc} />
		<meta property="og:image" content={ogImageUrl} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content={siteTitle} />
		<meta property="og:site_name" content="XR Awards" />
		{publishedTime && <meta property="article:published_time" content={publishedTime} />}
		{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
		{author && <meta property="article:author" content={author} />}
		{section && <meta property="article:section" content={section} />}
		{tags && tags.length > 0 && tags.map(tag => <meta property="article:tag" content={tag} />)}

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalUrl} />
		<meta property="twitter:title" content={siteTitle} />
		<meta property="twitter:description" content={cleanDesc} />
		<meta property="twitter:image" content={ogImageUrl} />
		<meta property="twitter:image:alt" content={siteTitle} />

		<!-- Favicon -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="preconnect" href="https://use.typekit.net" crossorigin />

		<!-- Preload fonts for faster loading -->
		<link
			rel="preload"
			href="https://fonts.googleapis.com/css2?family=Abhaya+Libre:wght@400;500;600;700;800&family=Jura:wght@300;400;500;600;700&family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap"
			as="style"
			onload="this.onload=null;this.rel='stylesheet'"
		/>
		<link
			rel="preload"
			href="https://use.typekit.net/mdj4hxh.css"
			as="style"
			onload="this.onload=null;this.rel='stylesheet'"
		/>

		<!-- Fallback for when JS is disabled -->
		<noscript>
			<link
				href="https://fonts.googleapis.com/css2?family=Abhaya+Libre:wght@400;500;600;700;800&family=Jura:wght@300;400;500;600;700&family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap"
				rel="stylesheet"
			/>
			<link rel="stylesheet" href="https://use.typekit.net/mdj4hxh.css" />
		</noscript>

		<!-- Theme -->
		<meta name="theme-color" content="#0E0F21" />
		<meta name="color-scheme" content="dark" />

		<!-- Cloudflare Rocket Loader exclusion -->
		<meta name="cf-rocket-loader" content="false" />
		
		<!-- Disable Rocket Loader for Astro scripts -->
		<script is:inline>
			// Disable Cloudflare Rocket Loader for Astro scripts
			if (typeof window !== 'undefined') {
				// Mark Astro scripts as excluded from Rocket Loader
				document.addEventListener('astro:page-load', function() {
					const astroScripts = document.querySelectorAll('script[src*="/_astro/"], script[data-astro-exec]');
					astroScripts.forEach(script => {
						script.setAttribute('data-cfasync', 'false');
						script.setAttribute('data-rocketloader', 'false');
					});
				});
			}
		</script>

		<!-- View Transitions -->
		<ViewTransitions />

		<!-- Initialize dataLayer + consents BEFORE GA loads -->
		<script is:inline>
			// Initialize dataLayer
			window.dataLayer = window.dataLayer || [];
			
			// Define gtag function globally for consent management
			window.gtag = function gtag(){ window.dataLayer.push(arguments); };
			
			// Check if user already accepted cookies (vanilla-cookieconsent stores in cc_cookie)
			var hasAnalyticsConsent = false;
			try {
				var ccCookie = document.cookie.match(/cc_cookie=([^;]+)/);
				if (ccCookie) {
					var consent = JSON.parse(decodeURIComponent(ccCookie[1]));
					hasAnalyticsConsent = consent.categories && consent.categories.includes('analytics');
				}
			} catch (e) {}
			
			// Set consent based on stored preference (or default denied for new visitors)
			var consentState = hasAnalyticsConsent ? 'granted' : 'denied';
			window.gtag('consent', 'default', {
				ad_storage: consentState,
				ad_user_data: consentState,
				ad_personalization: consentState,
				analytics_storage: consentState,
			});
		</script>
		
		<!-- Google Analytics 4 -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-NF24NV1RFG"></script>
		<script is:inline>
			window.gtag('js', new Date());
			window.gtag('config', 'G-NF24NV1RFG');
		</script>

		<!-- Additional head content from pages -->
		<slot name="head" />
	</head>
	<body class="bg-zinc-950 text-white antialiased">
		<slot />

		<!-- Event Banner -->
		<EventBanner client:load eventDate={eventDate} ticketsUrl={ticketsUrl} />

		<!-- Cookie Consent Banner - Exclude on admin pages -->
		{!Astro.url.pathname.startsWith('/admin') && (
			<div id="cc-container">
				<CookieConsent />
			</div>
		)}

		<!-- Scripts -->
		<script>
			// Smooth scroll behavior for anchor links
			document.addEventListener('astro:page-load', function() {
				const links = document.querySelectorAll('a[href^="#"]');
				links.forEach(link => {
					link.addEventListener('click', function(e) {
						e.preventDefault();
						const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
						if (href) {
							const target = document.querySelector(href);
							if (target) {
								target.scrollIntoView({ behavior: 'smooth' });
							}
						}
					});
				});
			});

		</script>
	</body>
</html>
